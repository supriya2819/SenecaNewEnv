{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "DeploymentID": {
        "type": "String"
      }
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "iotHubName": "[concat('BDA850', parameters('DeploymentId'))]",
      "skuName": "S1",
      "skuUnits": 1,
      "d2cPartitions": 4
    },
    "resources": [
      {
        "type": "Microsoft.Devices/IotHubs",
        "apiVersion": "2021-07-02",
        "name": "[variables('iotHubName')]",
        "location": "[variables('location')]",
        "sku": {
          "name": "[variables('skuName')]",
          "capacity": "[variables('skuUnits')]"
        },
        "properties": {
          "eventHubEndpoints": {
            "events": {
              "retentionTimeInDays": 1,
              "partitionCount": "[variables('d2cPartitions')]"
            }
          },
          "messagingEndpoints": {
            "fileNotifications": {
              "FeedbackRetentionTime": "PT1M",
              "TTLDuration": "PT1M",
              "maxDeliveryCount": 10
            }
          },
          "cloudToDevice": {
            "maxDeliveryCount": 10,
            "defaultTtl": "PT1H",
            "feedback": {
              "lockDuration": "PT1M",
              "ttl": "PT1H",
              "maxDeliveryCount": 10
            }
          }
        }
      }
    ]
}
